<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.pfc.business.device">
	<class name="Device" table="DEVICE">

        <id name="id" column="DEV_ID">
			<generator class="native"/>
		</id>

		<property name="name" type="string" column="DEV_NAME"/>
        
        <property name="description" type="string" column="DEV_DESC"/>

        <property name="ipAddress" type="string" column="DEV_IP"/>
        
        <property name="publicCommunity" type="string" column="DEV_PUB"/>
        
        <property name="snmpPort" type="string" column="DEV_PORT"/>

        <property name="position" type="org.hibernatespatial.GeometryUserType"  column="DEV_POS"/>
        
        <property name="lat" type="double" column="DEV_LAT"/>
        
        <property name="lng" type="double" column="DEV_LNG"/>
	</class>
</hibernate-mapping>